<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>publisher</servlet-name>
        <servlet-class>Controller.Action.PublisherController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>category</servlet-name>
        <servlet-class>Controller.Action.CategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createReport</servlet-name>
        <servlet-class>Controller.Action.generateReport</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>book</servlet-name>
        <servlet-class>Controller.Action.bookController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>author</servlet-name>
        <servlet-class>Controller.Action.authorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>publisher</servlet-name>
        <url-pattern>/publisher.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>category</servlet-name>
        <url-pattern>/category.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createReport</servlet-name>
        <url-pattern>/createReport.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>book</servlet-name>
        <url-pattern>/book.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>author</servlet-name>
        <url-pattern>/author.do</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
